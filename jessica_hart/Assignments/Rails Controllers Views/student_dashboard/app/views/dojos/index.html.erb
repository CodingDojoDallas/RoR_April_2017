<div id="wrapper">
  <ul>
    <% flash.each do |key, value| %>
      <%= content_tag :li, value, class: "flash #{key}" %>
    <% end %>
  </ul>
  <div id="content">
    <h1 style="display: inline-block;">Listing <%= @dojos.count %> Dojos</h1>
    <a href="/dojos/new" style="float: right;">Add Dojo</a>
    <table>
      <thead>
        <tr>
          <th>Coding Dojo Branch</th>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @dojos.each do |dojo| %>
          <tr>
            <td><%= dojo.branch %></td>
            <td><%= dojo.street %></td>
            <td><%= dojo.city %></td>
            <td><%= dojo.state %></td>
            <td>
              <%= link_to "Show", dojo %> |
				      <%= link_to "Edit", edit_dojo_path(dojo) %> |
				      <%= link_to "Delete", dojo, data: { method: :delete, confirm: "This cannot be undone. Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
